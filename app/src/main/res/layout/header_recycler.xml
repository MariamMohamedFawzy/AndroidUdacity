<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie name"
        android:id="@+id/textView_movieName"
        android:layout_weight="0"
        android:padding="6dp"
        android:layout_margin="6dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_moviePoster"
            android:layout_weight="0"
            android:layout_margin="6dp"
            android:padding="6dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView_movieYear"
                android:layout_margin="6dp"
                android:padding="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView_movieRating"
                android:layout_margin="6dp"
                android:padding="6dp"/>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="New Button"
        android:id="@+id/button_movieAddToFavorite"
        android:layout_weight="1"
        android:layout_margin="6dp"
        android:padding="6dp"
        android:background="#01A5B4"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="New Text"
        android:id="@+id/textView_movieOverview"
        android:layout_weight="1"
        android:layout_margin="6dp"
        android:padding="6dp"
        />
</LinearLayout>